
{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
    <div>
    {% for post in posts %}
    <h3>{{ post.title }}</h3>
    {# LE slice permet de gerer les caratères à afficher #}
    <p>{{ post.content|slice(0, 150)}}</p>
       {% if post.image is not null %}
            <img class="thumbnail"
            src="{{ asset(post.image.webPath) }}"
            alt="{{ post.image.alt }}"
            />
            {{ post.publishedAt | date('Y-m-d H:i:s') }}
    {% endif %}
    {% endfor %}    
       
    </div>
    



{% endblock %}