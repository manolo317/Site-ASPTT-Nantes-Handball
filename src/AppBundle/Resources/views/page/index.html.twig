{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
    <div class="col-md-8">
        {# On affiche tous les messages flash dont le nom est « info » #}
        {% for message in app.session.flashbag.get('notice') %}
            <div class="alert alert-info"><strong>Informations:</strong> {{ message }}</div>        {% endfor %}

        <h2 id="titre">Go Greens...</h2>
        <h2 id="titre1">La même passion...</h2>
        <h2 id="titre2">La même couleur</h2>

        <blockquote>
            {{ edito.content }}<br>
            <small class="pull-right">{{ edito.author }} le {{ edito.date|date('d-m-Y') }}</small><br>
        </blockquote>
    </div>
    <div class="col-md-4">
        {{ render(controller("AppBundle:Default:side")) }}
    </div>

{% endblock %}
