{% extends 'base.html.twig' %}

{% block body %}
    <h1>Date</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ date.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if date.date %}{{ date.date|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ date.slug }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('date_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('date_edit', { 'id': date.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
