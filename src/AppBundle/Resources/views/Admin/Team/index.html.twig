{% extends 'AppBundle:Admin:layout.html.twig' %}

{% block body %}
    <h1>Liste des équipes</h1>

    <ul>
        <li>
            <a href="{{ path('admin_team_new') }}"class="btn btn-primary">Nouvelle équipe</a>
        </li>
    </ul>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Niveau</th>
                <th>Palmares</th>
                <th>Lien Classement & Résultats</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td><a href="{{ path('admin_team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                <td>{{ team.name }}</td>
                <td>{{ team.level }}</td>
                <td>{{ team.palmares|slice(0,80) }}...</td>
                <td>{{ team.ranking }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_team_show', { 'id': team.id }) }}"class="btn btn-success btn-sm">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_team_edit', { 'id': team.id }) }}"class="btn btn-warning">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
