{% extends 'AppBundle:Admin:layout.html.twig' %}

{% block body %}
    <h1>Création de salle</h1>

    {{ form_start(form) }}
    {{ form_row(form.name, { 'label': 'Nom' }) }}
    {{ form_row(form.adress, { 'label': 'Adresse' }) }}
    {{ form_row(form.postalCode, { 'label': 'Code postal' }) }}
    {{ form_row(form.city, { 'label': 'Ville' }) }}
    {{ form_row(form.phone, { 'label': 'Téléphone' }) }}
    {{ form_rest(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success">ajouter</button>
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('admin_place_index') }}"class="btn btn-primary">retour</a>
        </li>
    </ul>
{% endblock %}
