{% extends 'AppBundle:Admin:layout.html.twig' %}

{% block body %}
    <h1>Liste des événements</h1>

    <ul>
        <li>
            <a href="{{ path('admin_post_new') }}"class="btn btn-primary">Nouvel article</a>
        </li>
    </ul>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Auteur</th>
                <th>Catégorie</th>
                <th>Publié</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.content|slice(0,100) }}...</td>
                <td>{{ post.author }}</td>
                <td>{{ post.postCategory.name }}</td>
                <td>
                    {% if post.validated == true %}
                        publié
                    {% elseif post.validated == false %}
                        non publié
                    {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_post_show', { 'id': post.id }) }}"class="btn btn-success btn-sm">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_post_edit', { 'id': post.id }) }}"class="btn btn-warning">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
