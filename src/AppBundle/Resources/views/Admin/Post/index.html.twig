{% extends "AppBundle::layout.html.twig" %}

{% block body %}
    <h1>Liste des posts</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Auteur</th>
                <th>Publié</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.author }}</td>
                <td>
                    {% if post.validated == true %}
                        publié
                    {% elseif post.validated == false %}
                        non publié
                    {% endif %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_post_new') }}">Create a new post</a>
        </li>
    </ul>
{% endblock %}
