{% extends 'base.html.twig' %}

{% block body %}
    <h1>Event</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date.slug }}</td>
            </tr>
            <tr>
                <th>Team</th>
                <td>{{ event.team.name }}</td>
            </tr>
            <tr>
                <th>Opponent</th>
                <td>{{ event.opponent }}</td>
            </tr>
            <tr>
                <th>Hour</th>
                <td>{{ event.hour|date('H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': event.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
