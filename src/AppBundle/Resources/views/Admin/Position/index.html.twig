{% extends 'AppBundle:Admin:layout.html.twig' %}

{% block body %}
    <h1>Liste rôles</h1>

    <ul>
        <li>
            <a href="{{ path('admin_position_new') }}"class="btn btn-primary">Nouveau rôle</a>
        </li>
    </ul>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for position in positions %}
            <tr>
                <td><a href="{{ path('admin_position_show', { 'id': position.id }) }}">{{ position.id }}</a></td>
                <td>{{ position.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_position_show', { 'id': position.id }) }}"class="btn btn-success btn-sm">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_position_edit', { 'id': position.id }) }}"class="btn btn-warning">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
