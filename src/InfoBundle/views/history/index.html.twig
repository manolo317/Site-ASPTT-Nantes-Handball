{% extends 'base.html.twig' %}

{% block body %}
    <h1>Histories list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Historycontent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for history in histories %}
            <tr>
                <td><a href="{{ path('admin_history_show', { 'id': history.id }) }}">{{ history.id }}</a></td>
                <td>{{ history.title }}</td>
                <td>{{ history.historyContent }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_history_show', { 'id': history.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_history_edit', { 'id': history.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_history_new') }}">Create a new history</a>
        </li>
    </ul>
{% endblock %}
